doctype html
html
  head
    meta(charset='utf-8')
    title Frogz - Create a Page
    link(rel='stylesheet', type='text/css', href='/css/edit.css')
    link(rel='icon', type='image/png', href='/favicon.png')
  body
    p(class="errors")!= errors
    form(action='/submit' method='post')
      p
        label(for='pageid') Page Name (URL)
        br
        input(type='text' name='pageid' value=pageid)
        br
        br
        label(for='password') Your password for editing in the future (do not lose this!)
        br
        input(type='password' name='password' value=password)
        br
        br
        label(for='style') Style: 
        select(name='style', id='')
            each stl in Styles
              if(stl == style)
                option(selected)=stl
              else 
                option=stl
        br
        br
        label(for='content') Content (markdown supported)
        textarea(name='content' autofocus='') #{_content}
        p
          input(type='submit' value='create')